<%= form_for order do |f| %>
<%= f.label :subscription%><br>
<%= f.collection_select :subscription_id, 
    Subscription.all, :id, :description %><br>
<%= f.label :first_name%><br>
<%= f.text_area :first_name %><br>
<%= f.label :last_name%><br>
<%= f.text_area :last_name %><br>
<%= f.label :email%><br>
<%= f.text_area :email %><br>
<%= f.fields_for :boxes do |builder|%>
<%= render 'box_fields', f: builder %>
<% end %>
<%= f.submit %>
<% end %>
<% link_to "your orders", order_path(@orders)%>
