<%= form_for (@user) do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %><br>
<%= f.label :last_name %>
<%= f.text_field :last_name %><br>
<%= f.label :email %>
<%= f.text_field :email %><br>
<%= f.label :password %>
<%= f.password_field :password %><br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %><br>
<%= f.select :role_type, Role.role_types.keys, 
:id :role_role_type, 
prompt: "select a role type" %><br>
<%= f.submit %>
<% end %>
