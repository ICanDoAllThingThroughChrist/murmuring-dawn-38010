<% @title = "Cat Store" %>
<h1>Title:  <%= @item.title %></h1>
<p>Description: <%= @item.description%></p>
<p>Image: <%= image_tag @item.image if @item.image?%></p>
<p>size: <%= @item.size%></p>
<p>URL: <%= @item.URL%></p>
<li><%= link_to "Edit item", edit_item_path(@item) %></li>
<li><%= link_to "Delete item",
            item_path(@item), 
            method: :delete, 
            data: { confirm: 'Are you sure?' } %></li> 
